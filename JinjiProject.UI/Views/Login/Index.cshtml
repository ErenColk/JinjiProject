@{
    Layout = null;
}
@model LoginVM

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Jinji Admin Panel</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="~/loginTemplate/Login_v3/images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/fonts/iconic/css/material-design-iconic-font.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/vendor/animsition/css/animsition.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/vendor/daterangepicker/daterangepicker.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/loginTemplate/Login_v3/css/main.css">
	<!--===============================================================================================-->
</head>
<body>

	<div class="limiter">
		<div class="container-login100" style="background-image: url('/loginTemplate/login_v3/images/bg-01.jpg');">
			<div class="wrap-login100">
				<form asp-controller="Login" asp-action="Index" method="post" class="login100-form validate-form">
					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape"></i>
					</span>

					<span class="login100-form-title p-b-34 p-t-27">
						Jinji Admin Panel
					</span>

					<div class="wrap-input100 validate-input" >
						<input asp-for="Email" class="input100" type="email" placeholder="Email Adresi">
						<span class="focus-input100" data-placeholder="&#xf207;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Enter password" style="position: relative;">
						<input asp-for="Password" class="input100" type="password" id="password" placeholder="Şifre" style="padding-right: 40px;">
						<span class="focus-input100" data-placeholder="&#xf191;"></span>
						<span class="toggle-password" onclick="togglePasswordVisibility()" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;"><i class="fa fa-eye" style="color:white;"></i></span>
					</div>

					<div class="contact100-form-checkbox">
						<input asp-for="RememberMe" class="input-checkbox100" id="ckb1" type="checkbox">
						<label class="label-checkbox100" for="ckb1">
							Beni Hatırla
						</label>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Giriş
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>


	<div id="dropDownSelect1"></div>

	<!--===============================================================================================-->
	 <script src="~/loginTemplate/Login_v3/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/loginTemplate/Login_v3/vendor/animsition/js/animsition.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/loginTemplate/Login_v3/vendor/bootstrap/js/popper.js"></script>
	<script src="~/loginTemplate/Login_v3/vendor/bootstrap/js/bootstrap.min.js"></script> 
	<!--===============================================================================================-->
	 <script src="~/loginTemplate/Login_v3/vendor/select2/select2.min.js"></script> 
	 <!--===============================================================================================-->
	<script src="~/loginTemplate/Login_v3/vendor/daterangepicker/moment.min.js"></script>
	<script src="~/loginTemplate/Login_v3/vendor/daterangepicker/daterangepicker.js"></script>
	<!--===============================================================================================-->
	<script src="~/loginTemplate/Login_v3/vendor/countdowntime/countdowntime.js"></script>
	<!--===============================================================================================-->
	<script src="~/loginTemplate/Login_v3/js/main.js"></script> 
	@await Component.InvokeAsync("Notyf")
	<script>
		function togglePasswordVisibility() {
			var passwordInput = document.getElementById('password');
			var toggleButton = document.querySelector('.toggle-password');

			if (passwordInput.type === 'password') {
				passwordInput.type = 'text';
				toggleButton.innerHTML = '<i class="fa fa-eye-slash" style="color:white;"></i>';
			} else {
				passwordInput.type = 'password';
				toggleButton.innerHTML = '<i class="fa fa-eye" style="color:white;"></i>';
			}
		}
	</script>
</body>
</html>