@model List<ListCategoryHomePageVM>

@foreach (var item in Model)
{
    string categoryName = "";
    if (item.Order == 1)
        categoryName = "men";
    else if (item.Order == 2)
        categoryName = "women";
    else
        categoryName = "kids";
    <section class="section" id="@categoryName">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-heading">
                        <h2>@item.Name</h2>
                        <span>@item.Description</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="men-item-carousel">
                        <div class="owl-men-item owl-carousel">
                            @foreach (var product in item.Products)
                            {
                                <div class="item ">
                                    <div class="thumb">
                                        <div class="hover-content">
                                            <ul>
                                                <li><a asp-action="ProductDetails" asp-route-id="@product.Id" asp-controller="Product"><i class="fa fa-eye"></i></a></li>

                                            </ul>
                                        </div>
                                        <div><img class="img-thumbnail" src="@product.ImagePath" style="width: 350px; height:400px;" /></div>


                                    </div>
                                    <div class="down-content">
                                        <div>
                                            <h4>@product.Name</h4>

                                        </div>

                                        <div class="d-flex flex-row justify-content-between">
                                            <span>@product.Price₺</span>
                                            <ul class="stars" style="position:static">
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


}


<script>
    $(document).ready(function () {
        runOwlCarousel()
    });
</script>

