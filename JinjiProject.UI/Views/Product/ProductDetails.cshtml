@{
    ViewData["Title"] = "ProductDetails";
}
@model GetProductDto

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Single Product Page</h2>
                    <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Product Area Starts ***** -->
<section class="section" id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="left-images">
                    <img src="@Model.ImagePath" alt="">
                    <img src="assets/images/single-product-02.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="right-content">
                    <h4>@Model.Name</h4>
                    @*<span class="price">@Model.Price₺</span>*@
                    <ul class="stars">
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                        <li><i class="fa fa-star"></i></li>
                    </ul>
                    @*<span>@Model.Description</span>*@
                    <div class="quote">
                        <i class="fa fa-quote-left"></i><p>@Model.Description</p>
                    </div>
                    <div class="quantity-content">
                        <div class="container ">
                            <button class="btn btn-dark col-lg-12" id="ozellikButton" data-toggle="collapse" data-target="#ozellikTablo" aria-expanded="false" aria-controls="ozellikTablo">Ürün Özellikleri</button>
                            <div class="mt-3 collapse" id="ozellikTablo">
                                <table class="table ">
                                    <tbody>
                                        <tr>
                                            <td>Renk</td>
                                            <td>: @Model.Color</td>
                                        </tr>
                                        <tr>
                                            <td>Stok Sayısı</td>
                                            <td>: @Model.Stock</td>
                                        </tr>
                                        <tr>
                                            <td>Marka</td>
                                            <td>:  @Model.BrandName </td>
                                        </tr>
                                        <tr>
                                            <td>Ürün Grubu</td>
                                            <td>:  @Model.GenreName </td>
                                        </tr>
                                        <tr>
                                            <td>Malzeme</td>
                                            <td>:  @Model.MaterialName </td>
                                        </tr>
                                        @if (Model.Capacity != null)
                                        {
                                            <tr>
                                                <td>Kapasite</td>
                                                <td>: @Model.Capacity</td>
                                            </tr>
                                        }
                                        @if (Model.Height != null)
                                        {
                                            <tr>
                                                <td>Yükseklik</td>
                                                <td>: @Model.Height</td>
                                            </tr>
                                        }
                                        @if (Model.Width != null)
                                        {
                                            <tr>
                                                <td>Genişlik</td>
                                                <td>: @Model.Width</td>
                                            </tr>
                                        }
                                        @if (Model.Length != null)
                                        {
                                            <tr>
                                                <td>Uzunluk</td>
                                                <td>: @Model.Length</td>
                                            </tr>
                                        }
                                        @if (Model.Size != null)
                                        {
                                            <tr>
                                                <td>Beden</td>
                                                <td>: @Model.Size</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @*<div class="left-content">
                        <h6>Ürün Özellikleri</h6>
                        </div>
                        <div class="right-content">
                        <div class="quantity buttons_added">
                        <input type="button" value="-" class="minus"><input type="number" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""><input type="button" value="+" class="plus">
                        </div>
                        </div>*@
                    </div>
                    <div class="total">
                        <div class="price">
                            <h4 class="price">Fiyat: @Model.Price₺</h4>
                            @*<div class="main-border-button"><a href="#">Add To Cart</a></div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Product Area Ends ***** -->

<style>
    .price {
        text-align: center; /* Metni ortalamak için */
        display: flex; /* Flex kullanarak içeriği dikey ve yatayda ortalamak için */

        /*height: 100vh; /* Sayfa boyunca div'i ortalayın */ */
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        runOwlCarousel();
    });
</script>