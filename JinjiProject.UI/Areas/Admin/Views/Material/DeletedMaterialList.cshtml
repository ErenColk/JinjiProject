@{
    ViewData["Title"] = "DeletedMaterialList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model List<DeletedMaterialListDto>

<div class="content">

    <div class="container-fluid">
        <h4 class="page-title">SİLİNEN MALZEMELER </h4>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Malzeme İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Malzeme Adı</th>
                                        <th scope="col">Durumu</th>
                                        <th scope="col">Silinme Zamanı</th>
                                        <th scope="col">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@GetEnumDescription.Description(item.Status)</td>
                                            <td>@item.DeletedDate</td>
                                            <td>
                                                <div class="d-grid">
                                                    <a href="/Admin/Material/AddAgainMaterial/@item.Id" class="btn btn-outline-success">Tekrar Ekle</a>
                                                </div>
                                                <div class="d-grid mt-1">
                                                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="loadMaterialData(@item.Id)" id="modalOpener" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.Id">
                                                        Veriyi Sil
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/Material/MaterialList" class="btn btn-outline-primary mt-3">Listeye Geri Dön</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<partial name="~/Areas/Admin/Views/Material/_MaterialHardDeletedPartialView.cshtml" />
<script src="~/js/delete-material.js"></script>





