@model List<ListMaterialDto>


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">MALZEME</h4>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Malzeme İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-4">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Malzeme Adı</th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {

                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@GetEnumDescription.Description(item.Status)</td>
                                            <td>
                                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                    Seçenekler
                                                </button>
                                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                                    <a class="dropdown-item" href="/Admin/Material/UpdateMaterial/@item.Id">Güncelle</a>
                                                    <a class="dropdown-item text-success" onclick="loadMaterialData(@item.Id)" id="modalOpener" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.Id">Detaylar</a>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item text-danger" href="/Admin/Material/SoftDelete/@item.Id">Sil</a>
                                                </ul>
                                            </td>
                                        </tr>
                                    }

                                }

                            </tbody>
                        </table>
                        <a href="/Admin/Material/CreateMaterial" class="btn btn-outline-primary">Yeni Malzeme Girişi </a>
                        <a style="margin-left:10px" href="/Admin/Material/DeletedMaterialList" class="btn btn-outline-danger">Silinen Malzemeler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Admin/Views/Material/_MaterialDetailPartialView.cshtml" />
<script src="~/js/detail-material.js"></script>
