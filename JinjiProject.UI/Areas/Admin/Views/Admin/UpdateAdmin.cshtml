@using JinjiProject.Core.Enums
@using JinjiProject.Dtos.Admins

@{
    ViewData["Title"] = "UpdateAdmin";
}
@model UpdateAdminDto

<div class="col-md-8" style="margin-top:80px">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Admin Güncelleme İşlemleri</div>
        </div>
        <form asp-area="Admin" asp-controller="Admin" asp-action="UpdateAdmin" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <label for="marka">Ad</label>
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Adınızı Giriniz...">
                        <span class="text-danger">@ViewData["FirstName"]</span>
                    </div>
                    <div class="col-lg-6">
                        <label for="soyad">Soyad</label>
                        <input asp-for="LastName" type="text" class="form-control" id="soyad" placeholder="Soyadınızı Giriniz...">
                        <span class="text-danger">@ViewData["LastName"]</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="BirthDate">Doğum Tarihi</label>
                        <input asp-for="BirthDate" type="date" class="form-control">
                        <span class="text-danger">@ViewData["BirthDate"]</span>
                    </div>
                    <div class="col-lg-6">
                        <label for="email">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email Giriniz...">
                        <span class="text-danger">@ViewData["Email"]</span>
                    </div>

                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <label for="foto">Fotoğraf</label>
                        <input asp-for="UploadPath" type="file" class="form-control" id="foto">
                        <span class="text-danger">@ViewData["UploadPath"]</span>
                    </div>
                    <div class="col-lg-6">
                        <label>Cinsiyet</label>
                        <div class=" form-group row ">
                            <div class="form-radio-inline">
                                <input asp-for="Gender" type="radio" class="form-radio-input" id="erkek" name="gender" value="@Gender.Man" style="left: 0; position:relative;">
                                <label class="form-radio-label" for="erkek">Erkek</label>
                            </div>
                            <div class="form-radio form-radio-inline">
                                <input asp-for="Gender" type="radio" class="form-radio-input" id="kadin" name="gender" value="@Gender.Woman" style="left: 0; position:relative;">
                                <label class="form-radio-label" for="kadin">Kadın</label>
                            </div>
                            <span class="text-danger">@ViewData["Gender"]</span>
                        </div>
                    </div>

                </div>

            </div>
            <div class="card-action row justify-content-end">
                <button type="submit" class="btn btn-success">Güncelle</button>
            </div>
        </form>
    </div>
</div>

