@using JinjiProject.Dtos.Admins

@{
    ViewData["Title"] = "DeletedAdminList";
}

@model List<DeletedAdminListDto>


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Admin</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="card-title">Silinen Adminler</div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Fotoğraf</th>
                                        <th scope="col">Adı</th>
                                        <th scope="col">Soyadı</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Durumu</th>
                                        <th scope="col">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null)
                                    {

                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td><img class="img-fluid" style="max-width: 75px; border-radius:50%;" src="@item.ImagePath" /></td>
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Email</td>
                                                <td>@GetEnumDescription.Description(item.Status)</td>
                                                <td>
                                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                        Seçenekler
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                                        <li>
                                                            <a class="dropdown-item text-success " href="/Admin/Admin/AddAgainAdmin/@item.Id">Tekrar Ekle</a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" style="cursor:pointer;" onclick="loadAdminData(@item.Id)" id="modalOpener" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.Id">
                                                                Veriyi Sil
                                                            </a>
                                                        </li>
                                                        
                                                    </ul>    
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <a href="/Admin/Admin/AdminList" class="btn btn-outline-primary mt-1">Listeye Geri Dön</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Admin/Views/Admin/_AdminHardDeletedPartialView.cshtml"/>