@{
    ViewData["Title"] = "DeletedBrandList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model List<DeletedBrandListDto>

<div class="content">

    <div class="container-fluid">
        <h4 class="page-title">SİLİNEN MARKALAR </h4>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Marka İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-4">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Marka Adı</th>
                                    <th scope="col">Durumu</th>
                                    <th scope="col">Silinme Zamanı</th>
                                    <th scope="col">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@GetEnumDescription.Description(item.Status)</td>
                                        <td>@item.DeletedDate</td>
                                        <td>
                                            <a type="submit" href="/Admin/Brand/AddAgainBrand/@item.Id" class="btn btn-outline-success">Tekrar Ekle</a>
                                            <a type="submit" href="/Admin/Brand/AddAgainBrand/@item.Id" class="btn btn-outline-danger">Veriyi Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Brand/BrandList" class="btn btn-outline-primary mt-1">Listeye Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








