@{
    ViewData["Title"] = "DeletedGenreList";
}

@model List<DeletedGenreListDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Silinen Kategori Türleri</h4>
        <div class="row">
            <div class="col-lg-12" style="min-height: 730px;">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Türü İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Ürün Fotoğrafı</th>
                                        <th scope="col">Ürün Adı</th>
                                        <th scope="col">Silinme Tarihi</th>
                                        <th scope="col">İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null)
                                    {

                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr class="dropdown-row">
                                                <td>@item.Id</td>
                                                <td><img class="img-fluid" style="width: 100px; height:100px; border-radius:50%;" src="@item.ImagePath" /></td>
                                                <td>@item.Name</td>
                                                <td>@item.DeletedDate</td>
                                                <td>
                                                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                        Seçenekler
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                                        <li>
                                                            <a class="dropdown-item " href="/Admin/Genre/AddAgainGenre/@item.Id">Tekrar Ekle</a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" onclick="loadGenreHardDeleteData(@item.Id)" id="modalOpener" data-bs-toggle="modal" data-bs-target="#hardDeleteModal" data-id="@item.Id">Veriyi Sil</a>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>

                            <a href="/Admin/Genre/GenreList" class="btn btn-outline-primary mt-1">Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="~/Areas/Admin/Views/Genre/_GenreHardDeletePartialView.cshtml" />
<script src="~/js/delete-genre.js"></script>


<style>
    .dropdown-item:hover {
        cursor: pointer;
    }
</style>