@model List<ListCategoryDto>

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">KATEGORİ</h4>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Kategori Adı</th>
                                        <th scope="col">Durumu</th>
                                        <th scope="col">Güncelle</th>
                                        <th scope="col">Detaylar</th>
                                        <th scope="col">Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model == null)
                                    {

                                    }
                                    else
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Name</td>
                                                <td>@GetEnumDescription.Description(item.Status)</td>
                                                <td>
                                                    <div class="d-grid">
                                                        <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-outline-success btn-sm">Güncelle</a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-grid">
                                                        <a href="/Admin/Category/DetailCategory/@item.Id" class="btn btn-outline-primary btn-sm">Detaylar</a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-grid">
                                                        <a href="/Admin/Category/SoftDelete/@item.Id" class="btn btn-outline-danger">Sil</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        <a href="/Admin/Category/CreateCategory" class="btn btn-outline-primary">Yeni Kategori Girişi </a>
                        <a style="margin-left:10px" href="/Admin/Category/DeletedCategoryList" class="btn btn-outline-danger">Silinen Kategoriler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


