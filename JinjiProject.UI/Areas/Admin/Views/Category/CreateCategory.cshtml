
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model CreateCategoryDto

<div class="col-md-8" style="margin-top:80px">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Kategori Ekleme İşlemleri</div>
        </div>
        <form method="post">
            <div class="card-body">
                <div class="form-group">
                    <label for="kategori">Kategori</label>
                    <input type="text" asp-for="Name" class="form-control" id="kategori" placeholder="Kategori Adı Giriniz...">
                    <span  class="text-danger">@ViewData["NameError"]</span>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="kategori">Kategori Açıklaması</label>
                    <input type="text" asp-for="Description" class="form-control" id="kategori" placeholder="Açıklamayı Giriniz...">
                    <span  class="text-danger">@ViewData["DescriptionError"]</span>
                </div>
            </div>
            <div class="card-action" style="display:flex; ">
                <button type="submit" class="btn btn-success">Ekle</button>
                <a class="btn btn-danger" href="/Admin/Category/CategoryList" style="margin-left:10px">Geri Dön</a>
            </div>
        </form>
    </div>
</div>
